generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
}

model User {
  id               BigInt  @id @default(autoincrement())
  telegram_user_id BigInt? @unique

  phone_number String?   @unique
  email        String?   @unique
  password     String?
  username     String?   @unique
  name         String?
  age          Int?
  role         UserRole  @default(USER)
  is_active    Boolean   @default(true)
  created_at   DateTime  @default(now())
  updated_at   DateTime?
  deleted_at   DateTime?

  categories    Category[]
  transactions  Transaction[]
  notifications Notification[]
  Conversation  Conversation[]
}

model Type {
  id         BigInt    @id @default(autoincrement())
  name       String
  created_at DateTime  @default(now())
  updated_at DateTime?
  deleted_at DateTime?

  categories Category[]
}

model Category {
  id             BigInt    @id @default(autoincrement())
  user_id        BigInt?
  name           String
  type_id        BigInt?
  spending_limit Decimal?
  created_at     DateTime  @default(now())
  updated_at     DateTime?
  deleted_at     DateTime?

  user         User?         @relation(fields: [user_id], references: [id])
  type         Type?         @relation(fields: [type_id], references: [id])
  transactions Transaction[]
}

model Transaction {
  id          BigInt    @id @default(autoincrement())
  user_id     BigInt?
  category_id BigInt?
  amount      Decimal
  description String?
  date        DateTime  @default(now())
  created_at  DateTime  @default(now())
  updated_at  DateTime?
  deleted_at  DateTime?

  user     User?     @relation(fields: [user_id], references: [id])
  category Category? @relation(fields: [category_id], references: [id])
}

model Notification {
  id          BigInt    @id @default(autoincrement())
  user_id     BigInt?
  title       String
  description String?
  external_id String?
  is_read     Boolean   @default(false)
  created_at  DateTime  @default(now())
  updated_at  DateTime?
  deleted_at  DateTime?

  user User? @relation(fields: [user_id], references: [id])
}

model Conversation {
  id         BigInt    @id @default(autoincrement())
  user_id    BigInt
  title      String?
  is_active  Boolean   @default(true)
  started_at DateTime  @default(now())
  ended_at   DateTime?
  created_at DateTime  @default(now())

  user     User      @relation(fields: [user_id], references: [id])
  messages Message[]
}

model Message {
  id              BigInt   @id @default(autoincrement())
  conversation_id BigInt
  sender          String
  text            String
  created_at      DateTime @default(now())

  conversation Conversation @relation(fields: [conversation_id], references: [id])
}
